"page"Â {
    padding: == 16 !require;
    width: <= 1200 !require;
    center-x: == ::window[center-x] !require;
    top: == ::window[top] + &[padding] !require;
    left: >= ::window[left] + &[padding] !require;
    right: <= ::window[right] + &[padding] !require;
}

"col-l-1",
"col-m-1",
"col-s-1" {
    left: == "page"[left] !require;
}

"col-l-1...12" {
    gutter: == 12 !require;
    width: == "page"[width] / 12 - &[gutter] * (11/12) !require;
    top: == "page"[top] !require;
    right: == &:next[left] - &[gutter];
    bottom: == ($ body)[bottom] - "page"[padding] !require;
}

"col-m-1...4" {
    gutter: == 8 !require;
    width: == "page"[width] / 4 - &[gutter] * (3/4) !require;
    top: == "page"[top] !require;
    right: == &:next[left] - &[gutter];
    bottom: == ($ body)[bottom] - "page"[padding] !require;
}

"col-s-1" {
    width: == "page"[width] !require;
    top: == "page"[top] !require;
    bottom: == ($ body)[bottom] - "page"[padding] !require;
}

body {
    margin: 0;
    width: == "page"[width];
    top: == 0;
    bottom: == section:last[bottom] + "page"[padding];
}

.visual-grid {
    background: rgba(0, 0, 0, 0.02);
}

.text-body {
    @if "page"[width] > 700 {
        left: == "col-l-4"[left];
        right: == "col-l-9"[right];
    }
    @if "page"[width] <= 700 {
        left: == "col-m-2"[left];
        right: == "col-m-3"[right];
    }
    @if "page"[width] <= 500 {
        left: == "col-s-1"[left];
        right: == "col-s-1"[right];
    }
}

.section {
    top: >= "page"[top];
    top: == &:previous[bottom];
    height: == &[intrinsic-height];
}

#col-1 {
    left: == "col-l-1"[left];
