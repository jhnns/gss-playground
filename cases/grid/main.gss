html {
    font-family: Georgia, serif;
    font-size: 1.2rem;
    line-height: 1.5;
}

body {
    margin: 0;
    top: == ::window[top];
    bottom: == section:last[bottom] + "page"[padding];
}

#header {
    center-x: == ::window[center-x] !require;
    width: == ::window[width] !require;
    top: == ::window[top] !require;
    bottom: == h1[bottom] + h1[height] / 2 !require;
    background-image: url("../../assets/woman.jpg");
    background-size: cover;
    background-position: center;

    h1 {
        font-size: 3rem;
        center-x: == ::window[center-x] !require;
        top: == ::window[center-y];
        height: == &[intrinsic-height];
        bottom: <= ::window[bottom] !require;
        margin: 0;
        color: white;
    }
}

.text-body {
    left: == ($ #col-4)[left];
    right: == ($ #col-9)[right];
}

.floating-image-left {
    margin-top: == ($ #col-1)[gutter];
    margin-bottom: == ($ #col-1)[gutter];
    @if "page"[width] < 500 {
        width: == ($ #col-1)[width];
    }
    @if "page"[width] >= 500 && "page"[width] < 960 {
        float: left;
        width: == 3 * ($ #col-1)[outer-width] - ($ #col-1)[gutter];
        margin-right: == ($ #col-1)[gutter];
        margin-left: == -1 * ($ #col-1)[outer-width];
    }
    @if "page"[width] >= 960 {
        float: left;
        width: == 4 * ($ #col-1)[outer-width] - ($ #col-1)[gutter];
        margin-right: == ($ #col-1)[gutter];
        margin-left: == -1 * ($ #col-1)[outer-width];
    }
}

.wide-image {
    @if "page"[width] < 500 {
        width: == ($ #col-1)[width];
    }
    @if "page"[width] >= 500 && "page"[width] < 960 {
        margin-top: == ($ #col-1)[gutter];
        margin-bottom: == ($ #col-1)[gutter];
        width: == 6 * ($ #col-1)[outer-width] - ($ #col-1)[gutter];
        margin-left: == -1 * ($ #col-1)[outer-width];
    }
    @if "page"[width] >= 960 {
        margin-top: == ($ #col-1)[gutter];
        margin-bottom: == ($ #col-1)[gutter];
        width: == 10 * ($ #col-1)[outer-width] - ($ #col-1)[gutter];
        margin-left: == -2 * ($ #col-1)[outer-width];
    }
}

section {
    top: >= ($ #header)[bottom] !require;
    top: == &:previous[bottom] !require;
    height: == &[intrinsic-height];
}

h1, h2 {
    font-family: Arial, Helvetica, sans-serif;
    font-weight: bold;
    text-align: center;
    font-size: 2rem;
    width: == ($ .text-body)[width] !require;
}

h2 {
    margin-top: 2em;
    margin-bottom: 1em;
}
